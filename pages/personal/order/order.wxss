/* pages/order/order.wxss */

.any {
  width: 100%;
  height: 100vh;
  background: #eee;
}

.top {
  width: 100%;
  height: 90rpx;
  background: #fd4949;
}

.ico {
  margin-left: 40rpx;
  float: left;
  width: 10%;
  font-size: 40rpx;
  line-height: 90rpx;
  color: white;
}

.tex {
  font-size: 40rpx;
  float: left;
  width: 80%;
  height: 90rpx;
  color: white;
  line-height: 90rpx;
}

.order {
	position: fixed;
	top:0;
	left: 0;
  width: 100%;
  height: 80rpx;
  background: white;
  display: flex;
  justify-content: center;
}

.order-son {
  width: 30%;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  font-size: 25rpx;
}

.active {
  border-bottom: 1rpx solid red;
  color: red;
}

.really {
  border-top: 1rpx solid #eee;
  width: 100%;
  height: 90rpx;
  background: white;
  font-size: 30rpx;
  line-height: 90rpx;
  padding: 10rpx 40rpx;
}

.my-order {

  background: white;
  border-bottom: 20rpx solid #eee;
}

.shop {
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid #eee;
}

.shop-name {
  padding-left: 20rpx;
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  float: left;
  line-height: 70rpx;
}

.state {
  padding-left: 20rpx;
  font-size: 24rpx;
  width: 40%;
  height: 100%;
  line-height: 70rpx;
  float: left;

  text-align: right;
}

.commdity {
  border-bottom: 1rpx solid #eee;
  padding: 2%;
  align-items: flex-start;
}

.commdity-pic {
  width: 25%;
}

.commdity-pic image {
  width: 100%;
  display: block;
}

.commdity-particulars {
  width: 73%;
  margin-left: 2%;
}
.commdity-particulars>view{
  justify-content: space-between;
}
.commdity-particulars>view:nth-child(2){
  margin-top:2%;
}
.commdity-particulars>view:nth-child(3){
margin-top:7%;
}



.time {
  line-height: 80rpx;
  justify-content: space-between;
}

.time>view:last-child{
  width: 40%;
  text-align: right;
  justify-content: flex-end;
}
.payfor {
  color: #fff;
  line-height: 50rpx;
  text-align: center;
  width: 100rpx;
  border-radius: 10rpx;
  margin-left: 4%;
}

/* ------ */
.large-box {
  width: 98%;
  padding: 20rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  line-height: 80rpx;
}

.discuss {
  width: 100%;
  height: 100%;
	
}

.discuss-input {
  width: 88%;
  padding: 3%;
  margin-left: 3%;
  height: 180rpx;
  border: 1rpx solid #eee;
}

.discuss-input-box-1 {
	overflow: hidden;
  position: fixed;
  top: 0;
  left: 0%;
  width: 100%;
  height: 100%;
  background: #666;
  display: flex;
  justify-content: center;
  align-items: center;
}

.discuss-div {
	overflow: hidden;
  width: 90%;
  height: 50%;
  background: #fff;
  border-radius: 20rpx;
	position: relative;
}

.discuss-title {
	margin-top:30rpx;
  text-align: center;
  width: 100%;
  height: 130rpx;
  line-height: 100rpx;
}

.ensure {
  width: 96%;
  padding: 2%;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: nowrap;
}

.ensure-ok {
  border: 1rpx solid #eee;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.flexaes{
	position: absolute;
	right: 0;
	width:60rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	top:0; 
}

.dis-desc-shop{
	margin-left:40rpx;
}