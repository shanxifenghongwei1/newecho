@import "/pages/index/oddments/oddments.wxss";

.large-box {
  width: 98%;
  padding: 20rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  line-height: 80rpx;
}

.discuss {
  width: 100%;
  height: 100%;
	
}

.discuss-input {
  width: 88%;
  padding: 3%;
  margin-left: 3%;
  height: 180rpx;
  border: 1rpx solid #eee;
}

.discuss-input-box-1 {
  position: fixed;
  top: 0;
  left: 0%;
  width: 100%;
  height: 100%;
  background: #666;
  display: flex;
  justify-content: center;
  align-items: center;
}

.discuss-div {
  width: 90%;
  height: 50%;
  background: #fff;
  border-radius: 20rpx;
	position: relative;
}

.discuss-title {
	margin-top:30rpx;
  text-align: center;
  width: 100%;
  height: 130rpx;
  line-height: 100rpx;
}

.ensure {
  width: 96%;
  padding: 2%;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: nowrap;
}

.ensure-ok {
  border: 1rpx solid #eee;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

