.header_top view {
  width: 7%;
  height: 100%;
  color: #fff;
  font-size: 50rpx;
  text-align: center;
}

.header_top button {
  position: absolute;
  right: 0px;
  top: 0px;
  width: 10%;
  height: 100%;
  background: none;
}

.header_top button::after {
  border: none;
}

.header_top view:last-child {
  padding-right: 2%;
}

