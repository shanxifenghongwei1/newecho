@import '/utils/wxss/voucher.wxss';
.header_top {
  position: fixed;
  top: 0px;
  width: 100%;
  left: 0px;
  z-index: 3;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: flex-end;
  background-color: #fff;
}

.any-back-wh-r{
	background: #fff;
	overflow: hidden;
}

page{
	background: #eee;
}

.commit_title {
  font-size: 36rpx;
  color: #333;
  padding-bottom: 2%;
  margin-top: 5%;
  border-bottom: 1px solid #ddd;
}

.bottom-border {
  border-bottom: 1px solid #ddd;
}

.bg_top {
  color: #fff;
  background: none;
}

.top-nav {
  width: 87%;
  justify-content: space-between;
  text-align: center;
}

.top-nav>view {
  flex-grow: 1;
  position: relative;
}

.nav_active {
  color: #ed4444;
}

.nav_active::before {
  position: absolute;
  bottom: -0px;
  left: 22%;
  content: "";
  width: 50%;
  border: 1px solid #ed4444;
}

.top-share {
  width: 13%;
  height: 100%;
}

.top-share button {
  position: absolute;
  width: 10%;
  height: 100%;
  background: none;
}

.top-share button::after {
  border: none;
}

.top-share view:last-child {
  font-size: 50rpx;
  text-align: center;
}

.slide-image {
  width: 100%;
  display: block;
}

.detial_text {
  width: 85%;
	height: 120rpx;
  padding: 4% 0% 3%;
}

.detial_text>view:first-child {
  color: #333;
  padding-bottom: 2.5%;
}

.detail-collection {
  width: 15%;
  text-align: center;
}

.detail-collection text {
  margin: 0rpx 0rpx 12rpx;
  display: block;
}

.detail-address, .nearby {
  line-height: 80rpx;
  justify-content: space-between;
}

.detail-address>view:first-child {
  width: 90%;
}

.da-address {
  PADDING: 3% 0%;
}

.da-address view {
  line-height: 40rpx;
}

.da-address view:last-child {
  color: #999;
  margin-top: 2%;
}

.detail-address>view:last-child {
  width: 10%;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 8rpx;
  color: #1ce969;
  border-left: 1px solid #ddd;
}

.nearby>view:first-child {
  color: #1ce969;
}

.business_detail_image {
  padding-top: 30rpx;
  background-color: #fff;
}

.business_detail_image image {
  display: block;
  width: 100%;
}

.nearby>view:last-child, .details-bar .iconfont {
  font-size: 44rpx;
  color: #999;
  margin-left: 20%;
}

.details-bar {
  justify-content: space-between;
  line-height: 80rpx;
  border-bottom: 1px solid #ddd;
}

.details-bar .global_small_font {
  color: #999;
}

.details-bar view:first-child {
  width: 11%;
  color: #999;
}

.details-bar view:nth-child(2) {
  text-align: left;
  width: 79%;
}

.details-bar>view:last-child {
  width: 10%;
  text-align: center;
}

