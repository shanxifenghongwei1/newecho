}

.bp_position {
  position: fixed;
  bottom: 0px;
  left: 0%;
  width: 96%;
  padding: 0% 2%;
  z-index: 10;
  border-top: 1px solid #ddd;
  background-color: #fff;
  justify-content: space-between;
  color: #39d1c2;
}

.bp_position>view:last-child{
  width: 160rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
}

.position_one {
  z-index: 100;
}

.position_content {
  position: absolute;
  width: 96%;
  background-color: #fff;
  z-index: 101;
  left: 0px;
  bottom: -60%;
  padding: 0% 2%;
}

.buy_fork {
  position: absolute;
  top: 0px;
  right: 0px;
  width: 80rpx;
  height: 80rpx;
  justify-content: center;
}

.buy_info {
  align-items: flex-start;
}

.buy_info>view:first-child {
  width: 25%;
  margin-top: -20rpx;
}

.buy_info>view:first-child image {
  width: 100%;
  display: block;
  border-radius: 4rpx;
}

.buy_money_select {
  width: 65%;
  padding-left: 3%;
}

.buy_money_num view {
  margin-right: 10%;
  line-height: 80rpx;
}

.buy_specifications_title {
  line-height: 86rpx;
  margin-top: 3%;
}

.buy_specifications {
  flex-wrap: wrap;
}

.buy_specifications view {
  margin-right: 5%;
  background-color: #f2f2f2;
  padding: 1% 2%;
  border-radius: 10rpx;
  margin-bottom: 4%;
}

.buy_specifications .bs_active {
  background-color: #ed4444;
  color: #fff;
}

.buy_num_calculate {
  justify-content: space-between;
  margin-top: 3%;
}

.buy_calculate {
  width: 30%;
  justify-content: space-between;
  height: 60rpx;
}

.buy_calculate input {
  width: 40%;
  height: 56rpx;
  color: #999;
  text-align: center;
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
}

.buy_calculate view {
  position: relative;
  color: #999;
  width: 30%;
  height: 100%;
  font-size: 46rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #ddd;
}

.buy_calculate .calculate_active {
  background-color: #f5f5f5;
}

.buy_btn {
  width: 100%;
  margin: 5% 0%;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
}

.dv-title {
  line-height: 80rpx;
}

.detail-voucher image {
  width: 100%;
  display: block;
  margin-bottom: 2%;
}
