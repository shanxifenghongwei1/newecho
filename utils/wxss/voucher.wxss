

.ticket {
  width: 100%;
  border-radius: 10rpx;
  height: 160rpx;
  overflow: hidden;
  border: 1px solid #d54036;
  border-right: 0;
  margin-bottom: 3%;
}

.ticket image {
  width: 100%;
}

.ticket_money {
  font-size: 60rpx;
  width: 25%;
  text-align: center;
  position: relative;
  height: 75%;
  justify-content: center;
  border-right: 1px solid #ddd;
}

.ticket_money text {
  padding-top: 10px;
  margin-left: 2rpx;
}

.ticket_info {
  margin-left: 5%;
  width: 50%;
}

.ticket_info view {
  line-height: 48rpx;
}

.payment {
  width: 30%;
  height: 100%;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
  color: #fff;
}

.payment1 {
  width: 100%;
  height: 100%;
  margin-left: 90rpx;
  color:#fff;
  background-color: #d54036;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.payment .icon-hongbaojuchi-copy {
  height: 100%;
  color: #d54036;
  font-size: 210rpx;
  width: 10%;
  margin-left: -50rpx;
}

.voucher {
  border: 1px solid #d54036;
  border-bottom: none;
  border-radius: 10rpx;
}

.voucher >view {
  justify-content: space-between;
}

.voucher>view:first-child {
  line-height: 160rpx;
}

.voucher_payment, .voucher_payment .iconfont {
  color: #fff;
}

.voucher_payment {
  margin: 0rpx -20rpx;
  line-height: 100rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
