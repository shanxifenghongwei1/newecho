
.store_module {
/* position: relative; */

  background-color: #fff;
  padding: 2.5% 2%;
}

.store_info {
  width: 90%;
  align-items: flex-start;
    position: relative;
}
.info_img_icon{
  position: absolute;
width: 10%;
  z-index: 5;
  left:3%;
  top:0px;
}
.info_img_icon image{
  width: 100%;
}
.info_img_icon text{
    position: absolute;
width: 92%;
height: 80%;
  z-index: 5;
  left:3%;
  top:0px;
  color:#fff;
  justify-content: center;
}
.info_img {
  width: 30%;
}

.info_img image {
  width: 100%;
  display: block;
  border-radius: 10rpx;
}

.info_content {
  width: 66%;
  margin-left: 3%;
}

.info_title {

  color: #333;
  line-height: 40rpx;
  margin-bottom: 2%;
  height: 80rpx;
}

.ic_info {
  line-height: 48rpx;
}

.ic_info>text:first-child {
  margin-right: 4%;
}

.store_phone {
  background-color: #ed4444;
  color: #fff;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  text-align: center;
}
/*
产品
*/
.product_module{
 display: flex;
    flex-wrap: wrap;
    padding: 0px 2.5%;
    padding-bottom:2.5%;
}
.di_item{
  width: 46.2%;
      margin-top:2.5%;
      background: #fff;
      padding: 1%;
}
.di_item:nth-child(2n){
  margin-left:1.6%;
}
.di_item>image{
  width: 100%;
}
.dl_title{
max-height: 96rpx;
}
.dl_title,.dl_detailed{
line-height: 48rpx;
-webkit-line-clamp:2;

}
