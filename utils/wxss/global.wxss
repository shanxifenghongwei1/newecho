/*顶层样式*/
.page_module {
  position: relative;
  font-family: "Microsoft YaHei";
  height: 100%；
}

/*全局字体样式*/

/*大号*/

.global_large_font {
  font-size: 32rpx;
  color: #666;
}

/*中号*/

.global_middle_font {
  font-size: 28rpx;
  color: #666;
}

/*小号*/

.global_small_font {
  font-size: 24rpx;
  color: #666;
}

/*全局颜色1*/

.global_color_red {
  color: #ed4444;
}
.global_color_666 {
color: #666;
}

.global_bg_color_red {
  background-color: #ed4444;
}

/*全局背景颜色*/

.global_bg_color {
  background-color: #eee;
}

/*多行css样式  
  几行省略号：-webkit-line-clamp: 行数;*/

.global_multiLine_ellipsis {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
}

/*单行css省略号*/

.global_single_ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/**
*换行样式
*/

.newline {
  height: 30rpx;
  background-color: #eee;
}

/*所有图片高度自定义*/
