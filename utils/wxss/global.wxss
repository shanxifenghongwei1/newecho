/*弹性布局-左右*/

.flex_about {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

/*全局背景弹窗*/

.global_postion_module {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  z-index: 99;
  background: rgba(0, 0, 0, 0.5);
  
}
/* 行内块元素 */
.line-inline {
  display: inline-block;
}

/* 下边框 */

.line-border-bottm {
  border-bottom: 1rpx solid #eee;
}
.line-border-bottom {
  border-bottom: 1rpx solid #eee;
}

/* 布局调试边框 */
.every-bottom {
  border: 1rpx solid black;
}

/* 全局左右边距 */
.padding-all {
  padding: 0 20rpx;
}
 radio,switch,checkbox {
